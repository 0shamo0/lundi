<div class="container">
<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task name</th>
      <th>Task designation</th>
      <th>Date butoire</th>
      <th>Collaborateur</th>
      <th>Nom du projet</th>
      <% if current_user == true %>
      <th>Email responsable</th> 
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.task_name, task %></td>
        <td><%= task.task_designation.truncate(30) %></td>
        <td><%= task.date_butoire %></td>
        <td><%= task.collaborator.collaborator_email %></td>
        <td><%= task.project.project_name %></td>
        <td><%= task.step.step_name %></td>
        <% if current_user == true %>
        <td><%= task.user.email %></td>
        <% end %>
        <td><%= link_to 'Modifier', edit_task_path(task), :class => "btn btn-warning", :style => "color: white" %></td>
        <td><%= link_to 'Détruire', task, :class => "btn btn-danger", :style => "color: white", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ Ajouter une nouvelle tâche', new_task_path, :class => "btn btn-primary", :style => "color: white" %>
</div>