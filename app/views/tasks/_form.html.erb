<div class="container">
  <%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  
  <div class="form-group row">
    <%= form.label :task_name,:class => "col-sm-2 col-form-label" %>
  <div class="col-sm-10">
    <%= form.text_field :task_name, :class => "form-control" %>
  </div>
  </div>
  
  <div class="form-group row">
    <%= form.label :task_designation,:class => "col-sm-2 col-form-label" %>
  <div class="col-sm-10">
    <%= form.text_area :task_designation, :class => "form-control"%>
  </div>
  </div>
  
  <div class="form-group row">
    <%= form.label :date_butoire,:class => "col-sm-2 col-form-label" %>
  <div class="col-xs-3 col-sm-4 col-md-4 col-lg-4">
    <%= form.date_select :date_butoire, {use_month_numbers: true}, {class: "form-control-1"} %>
  </div>
  </div>
  
  <div class="form-group row">
    <%= form.label :collaborator_id ,:class => "col-sm-2 col-form-label" %>
  <div class="col-sm-10">
    <%= form.collection_select :collaborator_id, Collaborator.all, :id, :collaborator_email, {}, {class: 'form-control'} %>
  </div>
  </div>
  
  <div class="form-group row">
    <%= form.label :project_id ,:class => "col-sm-2 col-form-label" %>
  <div class="col-sm-10">
    <%= form.collection_select :project_id, Project.all, :id, :project_name, {}, {class: 'form-control'} %>
  </div>
  </div>
  
  <div class="form-group row">
    <%= form.label :step_id ,:class => "col-sm-2 col-form-label" %>
  <div class="col-sm-10">
    <%= form.collection_select :step_id, Step.all, :id, :step_name, {}, {class: 'form-control'} %>
  </div>
  </div>
  
  <div class="actions">
    <%= form.submit :Validation, class: 'btn btn-primary' %>
  </div>
<% end %>
</div>
