<div class="container">
<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table class="table">
  <thead>
    <tr>
      <th>Project name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.project_name, project %></td>
      
        <td><td>
          
        <%= link_to edit_project_path(project) do %>
        <%= fa_icon 'edit', :style => "font-size: 25px; color: #444444" %>
        <% end %>
        
        <%= link_to project, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <%= fa_icon 'trash', :style => "font-size: 25px; color: #444444" %>
        <% end %>
        
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ Ajouter un nouveau projet', new_project_path, :class => "btn btn-primary", :style => "color: white" %>
</div>